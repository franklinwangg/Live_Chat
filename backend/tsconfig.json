{
  "compilerOptions": {
    "outDir": "./dist",         // Output directory for compiled JavaScript
    "rootDir": "./src",         // Root directory for TypeScript source files
    "target": "ES6",            // JavaScript version
    "module": "commonjs",       // Module system
    "strict": true,             // Enable strict type checking
    "esModuleInterop": true     // Allow import/export compatibility
  },
  "include": ["src"],           // Specify files to include for compilation
  "exclude": ["node_modules"]   // Exclude unnecessary files
}
